# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|

	config.vm.box = "generic/centos7"	
	config.vm.box_check_update = false
			
	config.vm.define "vm-dist3" do |jenkins|
		vm-dist3.vm.hostname = "vm-dist3"		
		vm-dist3.vm.network "private_network", ip: "192.168.40.20"
		vm-dist3.vm.provider "virtualbox" do |vb|
			vb.gui = false
			vb.memory = 2048
			vb.cpus = 2
			
		end		

	end
end